{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
    --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
    --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
    --color-border: {{ section.settings.colors_border.red }}, {{ section.settings.colors_border.green }}, {{ section.settings.colors_border.blue }};
    --color-link: var(--color-foreground);
    --color-button-background: {{ section.settings.colors_button_background.red }}, {{ section.settings.colors_button_background.green }}, {{ section.settings.colors_button_background.blue }};
    --color-button-text: {{ section.settings.colors_button_label.red }}, {{ section.settings.colors_button_label.green }}, {{ section.settings.colors_button_label.blue }};
    --color-button-border: var(--color-button-background);
    --color-shadow: var(--color-foreground);
    --shadow-opacity: 0.3;
  }
{%- endstyle -%}

{{ 'section-tab-collage.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

<link rel="stylesheet" href="{{ 'component-deferred-media.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}</noscript>

<div class="section--padding{% if section.settings.show_divider %} section--divider{% endif %}">
  <div class="page-width{% if section.settings.full_width %} page-width--full-width{% endif %}">
    <div class="title-wrapper{% if section.settings.heading == blank %} title-wrapper--no-heading{% endif %}{% if section.settings.full_width %} page-width{% endif %} {{ section.settings.heading_alignment }}">
      <{{ section.settings.heading_tag }} class="title {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</{{ section.settings.heading_tag }}>
    </div>
    
    {%- if section.blocks.size > 0 -%}
      <tab-collage class="tab-collage grid grid--gapless grid--1-col grid--2-col-tablet{% if section.settings.layout == 'image_first' %} tab-collage__grid--reverse{% endif %}{% if section.settings.mobile_layout == 'image_first' %} tab-collage__grid-mobile--reverse{% endif %}"
        {%- if section.settings.make_collapsible_rows %} data-accordion{% endif -%}
      >
        <div class="grid__item tab-collage__left {{ section.settings.text_box_position }}">
          <ul class="tab-collage__content {{ section.settings.text_alignment }} mobile-{{ section.settings.mobile_text_alignment }} page-width">
            {%- for block in section.blocks -%}
              <li class="tab-collage__item">
                {%- case block.type -%}
                  {%- when 'image' -%}
                    <p data-block-id="{{ block.id }}" class="tab-collage__heading{% if forloop.first %} is-active{% endif %} h2">
                      {%- liquid
                        echo block.settings.heading | escape

                        if section.settings.make_collapsible_rows
                          render 'icon', icon: 'caret'
                        endif
                      -%}
                    </p>
                    {%- liquid
                      if section.settings.make_collapsible_rows
                        assign block_description = block.settings.description
                      endif
                    -%}

                  {%- when 'product' -%}
                    <p data-block-id="{{ block.id }}" class="tab-collage__heading{% if forloop.first %} is-active{% endif %} h2">
                      {%- liquid
                        if block.settings.heading != blank
                          echo block.settings.heading | escape
                        elsif block.settings.product != blank
                          echo block.settings.product.title | escape
                        else
                          echo 'onboarding.product_title' | t
                        endif

                        if section.settings.make_collapsible_rows
                          render 'icon', icon: 'caret'
                        endif
                      -%}
                    </p>
                    {%- liquid
                      if section.settings.make_collapsible_rows
                        assign card_product = block.settings.product
                        assign block_description = block.settings.description
                        
                        if block.settings.description == blank and card_product != blank
                          assign block_description = card_product.description | strip_html | truncatewords: 20
                        endif

                        if card_product != blank
                          assign block_card_url = card_product.url
                        endif
                      endif
                    -%}

                  {%- when 'collection' -%}
                    <p data-block-id="{{ block.id }}" class="tab-collage__heading{% if forloop.first %} is-active{% endif %} h2">
                      {%- liquid
                        if block.settings.heading != blank
                          echo block.settings.heading | escape
                        elsif block.settings.collection != blank
                          echo block.settings.collection.title | escape
                        else
                          echo 'onboarding.collection_title' | t
                        endif

                        if section.settings.make_collapsible_rows
                          render 'icon', icon: 'caret'
                        endif
                      -%}
                    </p>
                    {%- liquid
                      if section.settings.make_collapsible_rows
                        assign card_collection = block.settings.collection
                        assign block_description = block.settings.description
                        
                        if block.settings.description == blank and card_collection != blank
                          assign block_description = card_collection.description | strip_html | truncatewords: 20
                        endif

                        if card_collection != blank
                          assign block_card_url = card_collection.url
                        endif
                      endif
                    -%}

                  {%- when 'video' -%}
                    <p data-block-id="{{ block.id }}" class="tab-collage__heading{% if forloop.first %} is-active{% endif %} h2">
                      {%- liquid
                        echo block.settings.heading | escape

                        if section.settings.make_collapsible_rows
                          render 'icon', icon: 'caret'
                        endif
                      -%}
                    </p>
                    {%- liquid
                      if section.settings.make_collapsible_rows
                        assign block_description = block.settings.description
                      endif
                    -%}
                {%- endcase -%}

                {%- if section.settings.make_collapsible_rows -%}
                  <div class="tab-collage__desc">
                    {{ block_description }}

                    {%- if block.settings.button_label != blank -%}
                      {%- if block.settings.button_style_secondary -%}
                        <a class="button button--cta button--{{ block.settings.button_size }}"{% if block.settings.button_link != blank or block_card_url != blank %} href="{{ block.settings.button_link | default: block_card_url }}"{% else %} role="link" aria-disabled="true"{% endif %}>
                          <span class="label">{{ block.settings.button_label | escape }}</span>
                          {% render 'icon', icon: 'arrow' %}
                        </a>
                      {%- else -%}
                        <a class="button button--{{ block.settings.button_size }}"{% if block.settings.button_link != blank or block_card_url != blank %} href="{{ block.settings.button_link | default: block_card_url }}"{% else %} role="link" aria-disabled="true"{% endif %}>
                          {{ block.settings.button_label | escape }}
                        </a>
                      {%- endif -%}
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
          {%- unless section.settings.make_collapsible_rows -%}
            <div class="tab-collage__bottom {{ section.settings.text_alignment }} mobile-{{ section.settings.mobile_text_alignment }} page-width">
              {%- for block in section.blocks -%}
                <div data-block-id="{{ block.id }}" class="tab-collage__desc{% if forloop.first %} is-active{% endif %}">
                  {%- liquid
                    case block.type
                      when 'image'
                        assign block_description = block.settings.description

                      when 'product'
                        assign card_product = block.settings.product
                        assign block_description = block.settings.description
                        
                        if block.settings.description == blank and card_product != blank
                          assign block_description = card_product.description | strip_html | truncatewords: 20
                        endif

                        if card_product != blank
                          assign block_card_url = card_product.url
                        endif

                      when 'collection'
                        assign card_collection = block.settings.collection
                        assign block_description = block.settings.description
                        
                        if block.settings.description == blank and card_collection != blank
                          assign block_description = card_collection.description | strip_html | truncatewords: 20
                        endif

                        if card_collection != blank
                          assign block_card_url = card_collection.url
                        endif

                      when 'video'
                        assign block_description = block.settings.description
                    endcase
                  -%}

                  <div>{{ block_description }}</div>
                  {%- if block.settings.button_label != blank -%}
                    {%- if block.settings.button_style_secondary -%}
                      <a class="button button--cta button--{{ block.settings.button_size }}"{% if block.settings.button_link != blank or block_card_url != blank %} href="{{ block.settings.button_link | default: block_card_url }}"{% else %} role="link" aria-disabled="true"{% endif %}>
                        <span class="label">{{ block.settings.button_label | escape }}</span>
                        {% render 'icon', icon: 'arrow' %}
                      </a>
                    {%- else -%}
                      <a class="button button--{{ block.settings.button_size }}"{% if block.settings.button_link != blank or block_card_url != blank %} href="{{ block.settings.button_link | default: block_card_url }}"{% else %} role="link" aria-disabled="true"{% endif %}>
                        {{ block.settings.button_label | escape }}
                      </a>
                    {%- endif -%}
                  {%- endif -%}
                </div>
              {%- endfor -%}
            </div>
          {%- endunless -%}
        </div>

        <use-animate data-animate="zoom-fade-small" class="grid__item tab-collage__right">
          {%- capture sizes -%}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 10rem) / 2),{% if section.settings.full_width %} 100vw{% else %} calc(100vw - 3rem){% endif %}{%- endcapture -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'image' -%}
                <div data-block-id="{{ block.id }}" class="tab-collage__card{% if forloop.first %} is-active{% endif %}">
                  <div class="media-wrapper">
                    {%- if block.settings.image != blank -%}
                      <div class="tab-collage__card-image image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}"
                        style="--image-ratio-percent: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%; --image-position: {{ block.settings.image_position }};"
                      >
                        {{ block.settings.image | image_url: width: 1500 | image_tag:
                          loading: 'lazy',
                          sizes: sizes,
                          widths: '165, 360, 535, 750, 1100, 1500',
                          is: 'lazy-image'
                        }}
                      </div>
                    {%- else -%}
                      <div class="tab-collage__card-image image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }} media--placeholder">
                        {{ 'image' | placeholder_svg_tag: 'placeholder' }}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              {%- when 'product' -%}
                <div data-block-id="{{ block.id }}" class="tab-collage__card{% if forloop.first %} is-active{% endif %}">
                  <div class="media-wrapper">
                    {%- assign featured_media = block.settings.product.selected_or_first_available_variant.featured_media | default: block.settings.product.featured_media -%}
                    {%- if featured_media != blank -%}
                      <div class="tab-collage__card-image image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}"
                        style="--image-ratio-percent: {{ 1 | divided_by: featured_media.aspect_ratio | times: 100 }}%; --image-position: {{ block.settings.image_position }};"
                      >
                        {%- assign alt = featured_media.alt | escape | split: '#' | first -%}
                        {{ featured_media.preview_image | image_url: width: 1500 | image_tag:
                          loading: 'lazy',
                          sizes: sizes,
                          widths: '165, 360, 535, 750, 1100, 1500',
                          alt: alt,
                          is: 'lazy-image'
                        }}
                      </div>
                    {%- else -%}
                      <div class="tab-collage__card-image image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }} media--placeholder">
                        {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              {%- when 'collection' -%}
                <div data-block-id="{{ block.id }}" class="tab-collage__card{% if forloop.first %} is-active{% endif %}">
                  <div class="media-wrapper">
                    {%- assign featured_image = block.settings.collection.featured_image -%}
                    {%- if featured_image != blank -%}
                      <div class="tab-collage__card-image image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}"
                        style="--image-ratio-percent: {{ 1 | divided_by: featured_image.aspect_ratio | times: 100 }}%; --image-position: {{ block.settings.image_position }};"
                      >
                        {%- assign alt = featured_image.alt | escape | split: '#' | first -%}
                        {{ featured_image | image_url: width: 1500 | image_tag:
                          loading: 'lazy',
                          sizes: sizes,
                          widths: '165, 360, 535, 750, 1100, 1500',
                          alt: alt,
                          is: 'lazy-image'
                        }}
                      </div>
                    {%- else -%}
                      <div class="tab-collage__card-image image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }} media--placeholder">
                        {{ 'collection-1' | placeholder_svg_tag: 'placeholder' }}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              {%- when 'video' -%}
                <div data-block-id="{{ block.id }}" class="tab-collage__card{% if forloop.first %} is-active{% endif %}">
                  {%- capture cover_image_render -%}
                    {%- if block.settings.cover_image != blank -%}
                      <div class="tab-collage__card-image media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}"
                        style="--image-ratio-percent: {{ 1 | divided_by: block.settings.cover_image.aspect_ratio | times: 100 }}%; --image-position: {{ block.settings.image_position }};"
                      >
                        {%- assign alt = 'sections.video.load_video' | t: description: block.settings.video_alt | escape -%}
                        {{ block.settings.cover_image | image_url: width: 1500 | image_tag:
                          loading: 'lazy',
                          sizes: sizes,
                          widths: '165, 360, 535, 750, 1100, 1500',
                          alt: alt
                        }}
                      </div>
                    {%- else -%}
                      <div class="tab-collage__card-image image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }} media--placeholder">
                        {{ 'collection-2' | placeholder_svg_tag: 'placeholder' }}
                      </div>
                    {%- endif -%}
                  {%- endcapture -%}
                  <noscript>
                    <a href="{{ block.settings.video_url }}" class="card-wrapper deferred-media__poster">
                      <span class="deferred-media__poster-button motion-reduce">
                        {%- render 'icon', icon: 'play' -%}
                      </span>
                      {{ cover_image_render }}
                    </a>
                  </noscript>
                  <deferred-media class="media-wrapper deferred-media no-js-hidden media-wrapper media-wrapper--large"
                    data-media-id="{{ block.settings.video_url.id }}"
                  >
                    <button
                      id="Deferred-Poster-{{ block.settings.video_url.id }}"
                      class="deferred-media__poster"
                      type="button"
                    >
                      <span class="deferred-media__poster-button motion-reduce">
                        {%- render 'icon', icon: 'play' -%}
                      </span>
                      <use-animate data-animate="zoom-fade-small" class="media-wrapper">
                        {{ cover_image_render }}
                      </use-animate>
                    </button>
                    <template>
                      {%- if block.settings.video_url.type == 'youtube' -%}
                        <video-section
                          data-init-mode="template"
                          data-parent="deferred-media"
                          data-type="youtube"
                          data-video-id="{{ block.settings.video_url.id }}"></video-section>
                      {%- else -%}
                        <video-section
                          data-init-mode="template"
                          data-parent="deferred-media"
                          data-type="vimeo"
                          data-video-id="{{ block.settings.video_url.id }}"></video-section>
                      {%- endif -%}
                    </template>
                  </deferred-media>
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </use-animate>
      </tab-collage>
    {%- endif -%}
  </div>
</div>

